@{
    ViewData["Title"] = "Login";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-100 via-white to-indigo-200">
    <div class="w-full max-w-md bg-white bg-opacity-90 rounded-2xl shadow-xl p-8 sm:p-10">
        <h2 class="text-2xl font-bold text-center text-indigo-700 mb-6">Login to your account</h2>

        <form method="post" class="space-y-5">
            <div>
                <label for="exampleInputEmail1" class="block text-gray-700 font-medium mb-1">Email address</label>
                <input type="email" id="exampleInputEmail1" name="Email"
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400 transition" />
                <p class="text-sm text-gray-500 mt-1">We'll never share your email with anyone else.</p>
            </div>

            <div>
                <label for="exampleInputPassword1" class="block text-gray-700 font-medium mb-1">Password</label>
                <input type="password" id="exampleInputPassword1" name="Password"
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400 transition" />
            </div>


            <div>
                <a asp-controller="User" asp-action="ForgotPassWord"> Forgot PassWord ?</a>
            </div>


            <div class="flex items-center">



                <input type="checkbox" id="exampleCheck1"
                       class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
                <label for="exampleCheck1" class="ml-2 text-gray-700 text-sm">Remember me</label>

            </div>

            <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 rounded-lg transition shadow">
                Login
            </button>

           
        </form>
    </div>
</div>
