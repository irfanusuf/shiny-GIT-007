<body>
<header>
    <nav class="bg-gray-900 text-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-indigo-400 ps-5">
                    Trinkle
                </a>

                <!-- Hamburger (Mobile) -->
                <div class="md:hidden">
                    <button id="menu-toggle" class="text-white focus:outline-none">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
                             viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>

                <!-- Desktop Menu -->
                <div class="hidden md:flex items-center space-x-6">
                    <a asp-area="" asp-controller="User" asp-action="Login" class="hover:text-indigo-400 transition">Login</a>
                    <a asp-area="" asp-controller="User" asp-action="Register" class="hover:text-indigo-400 transition">Register</a>
                    <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="General" class="hover:text-indigo-400 transition">Shop</a>
                    <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Electronics" class="hover:text-indigo-400 transition">Electronics</a>
                    <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Clothing" class="hover:text-indigo-400 transition">Clothing</a>
                    <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Automotive" class="hover:text-indigo-400 transition">Automotive</a>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden mt-3 flex flex-col space-y-2 text-white">
                <a asp-area="" asp-controller="User" asp-action="Login" class="hover:text-indigo-400 transition">Login</a>
                <a asp-area="" asp-controller="User" asp-action="Register" class="hover:text-indigo-400 transition">Register</a>
                <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="General" class="hover:text-indigo-400 transition">Shop</a>
                <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Electronics" class="hover:text-indigo-400 transition">Electronics</a>
                <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Clothing" class="hover:text-indigo-400 transition">Clothing</a>
                <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Automotive" class="hover:text-indigo-400 transition">Automotive</a>
            </div>
        </div>
    </nav>

    <script>
        const toggle = document.getElementById('menu-toggle');
        const menu = document.getElementById('mobile-menu');
        toggle.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });
    </script>
</header>



<div class="notification_bar px-4 max-w-3xl mx-auto mt-4 space-y-3">

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <div class="relative flex items-start bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
            <svg class="w-5 h-5 mt-1 mr-2 flex-shrink-0 text-red-600" fill="none" stroke="currentColor" stroke-width="2"
                 viewBox="0 0 24 24">
                <path d="M18.364 5.636l-12.728 12.728M5.636 5.636l12.728 12.728" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <span class="flex-grow">@ViewBag.ErrorMessage</span>
            <button type="button" onclick="this.parentElement.remove()" class="text-red-700 hover:text-red-900 ml-4 font-bold text-xl leading-none">&times;</button>
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
    {
        <div class="relative flex items-start bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg" role="alert">
            <svg class="w-5 h-5 mt-1 mr-2 flex-shrink-0 text-green-600" fill="none" stroke="currentColor" stroke-width="2"
                 viewBox="0 0 24 24">
                <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <span class="flex-grow">@ViewBag.SuccessMessage</span>
            <button type="button" onclick="this.parentElement.remove()" class="text-green-700 hover:text-green-900 ml-4 font-bold text-xl leading-none">&times;</button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="relative flex items-start bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
            <svg class="w-5 h-5 mt-1 mr-2 flex-shrink-0 text-red-600" fill="none" stroke="currentColor" stroke-width="2"
                 viewBox="0 0 24 24">
                <path d="M18.364 5.636l-12.728 12.728M5.636 5.636l12.728 12.728" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <span class="flex-grow">@TempData["ErrorMessage"]</span>
            <button type="button" onclick="this.parentElement.remove()" class="text-red-700 hover:text-red-900 ml-4 font-bold text-xl leading-none">&times;</button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="relative flex items-start bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg" role="alert">
            <svg class="w-5 h-5 mt-1 mr-2 flex-shrink-0 text-green-600" fill="none" stroke="currentColor" stroke-width="2"
                 viewBox="0 0 24 24">
                <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <span class="flex-grow">@TempData["SuccessMessage"]</span>
            <button type="button" onclick="this.parentElement.remove()" class="text-green-700 hover:text-green-900 ml-4 font-bold text-xl leading-none">&times;</button>
        </div>
    }
</div>




    <div style="min-height: 90vh;" class=" bg-gradient-to-br from-indigo-100 via-white to-indigo-200">
        @RenderBody()

    </div>


<footer class="bg-gray-900 text-gray-300 ">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Company Info -->
        <div>
            <h3 class="text-lg font-semibold text-white mb-2">Trinkle</h3>
            <p class="text-sm">
                Your go-to marketplace for everything from gadgets to fashion. Powered by simplicity and elegance.
            </p>
        </div>

        <!-- Quick Links -->
        <div>
            <h4 class="text-md font-semibold text-white mb-2">Quick Links</h4>
            <ul class="space-y-1">
                <li><a asp-controller="Home" asp-action="Index" class="hover:text-indigo-400 transition">Home</a></li>
                <li><a asp-controller="User" asp-action="Login" class="hover:text-indigo-400 transition">Login</a></li>
                <li><a asp-controller="User" asp-action="Register" class="hover:text-indigo-400 transition">Register</a></li>
                <li><a asp-controller="Product" asp-action="Index" class="hover:text-indigo-400 transition">Shop</a></li>
            </ul>
        </div>

        <!-- Categories -->
        <div>
            <h4 class="text-md font-semibold text-white mb-2">Categories</h4>
            <ul class="space-y-1">
                <li><a asp-controller="Product" asp-action="Index" asp-route-Category="Electronics" class="hover:text-indigo-400 transition">Electronics</a></li>
                <li><a asp-controller="Product" asp-action="Index" asp-route-Category="Clothing" class="hover:text-indigo-400 transition">Clothing</a></li>
                <li><a asp-controller="Product" asp-action="Index" asp-route-Category="Automotive" class="hover:text-indigo-400 transition">Automotive</a></li>
            </ul>
        </div>

        <!-- Contact -->
        <div>
            <h4 class="text-md font-semibold text-white mb-2">Contact</h4>
            <p class="text-sm">Email: support@trinkle.com</p>
            <p class="text-sm">Phone: +1 (800) 123-4567</p>
        </div>
    </div>

    <div class="text-center py-4 border-t border-gray-700 text-sm">
        &copy; @DateTime.Now.Year Trinkle. All rights reserved.
    </div>
</footer>




