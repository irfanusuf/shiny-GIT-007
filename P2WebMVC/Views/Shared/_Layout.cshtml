<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Trinkle</title>


    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@

    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />

    @* <link rel="stylesheet" href="~/P2WebMVC.styles.css" asp-append-version="true" /> *@

  

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@* 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous"> *@


</head>

<body>
<header>
    <nav class="bg-white border-b shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <!-- Logo -->
                <a class="text-2xl font-semibold text-indigo-600 ps-5" asp-area="" asp-controller="Home" asp-action="Index">
                    Trinkle
                </a>

                <!-- Hamburger -->
                <div class="md:hidden">
                    <button id="menu-toggle" class="text-gray-700 focus:outline-none">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
                             viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>

                <!-- Desktop Links -->
                <div class="hidden md:flex space-x-6 items-center">
                    <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                    <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                    <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="General">Shop</a>
                    <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Electronics">Electronics</a>
                    <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Clothing">Clothing</a>
                    <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Automotive">Automotive</a>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden flex flex-col mt-4 space-y-2">
                <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="General">Shop</a>
                <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Electronics">Electronics</a>
                <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Clothing">Clothing</a>
                <a class="text-gray-700 hover:text-indigo-600 transition" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Automotive">Automotive</a>
            </div>
        </div>
    </nav>

    <script>
        const toggle = document.getElementById('menu-toggle');
        const menu = document.getElementById('mobile-menu');
        toggle.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });
    </script>
</header>




    <div class="notification_bar">

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

           @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

    </div>



    <div class="container" style="min-height: 90vh;"  >
        @RenderBody()

    </div>


    <footer class="border-top footer text-muted" style="transform: translateY(80px);">
        <div class="container">
            &copy; 2025 - P2WebMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>




    <script src="~/js/site.js" asp-append-version="true"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"></script>





    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
