@model P2WebMVC.Models.ViewModels.ProductView


@{
    ViewData["Title"] = "Products";
}


<h1> All Products</h1>



<div class="container d-flex flex-wrap justify-content-center" style="gap: 20px;">

    @* Loop through the products and display them in a card format *@


            @if(!string.IsNullOrEmpty(ViewBag.Message)){
                <div> @ViewBag.Message</div>
            }
else{

 @foreach (var product in Model.Products)
        {


            <div class="card" style="width: 18rem;">
                <img src="@product.ProductImage" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"> @product.ProductName</h5>
                    <p class="card-text">@product.ProductDescription</p>

                    <p class="card-text">Price: @product.ProductPrice <span class="text-muted">@product.ProductStock
                            availble</span></p>

                    <a asp-controller="Product" asp-action="Details" asp-route-ProductId="@product.ProductId"
                        class="btn btn-success">Details</a>
                    <a asp-controller="Product" asp-action="AddToCart" asp-route-ProductId="@product.ProductId"
                        class="btn btn-primary">Add To cart</a>
                </div>
            </div>

        }

}


       
        




    </div>
